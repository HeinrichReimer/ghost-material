{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #author tags pulls data from the author }}
{{#tag}}
	<div class="cover cover-author"{{#if image}} style="background-image: url('{{image}}')"{{else}}{{#if @blog.cover}} style="background-image: url('{{@blog.cover}}')"{{/if}}{{/if}}>
		<div class="cover-text">
			<h1 class="mdl-typography--display-4">#{{name}}</h1>
            {{#if description}}
				<p class="mdl-typography--headline">{{description}}</p>
            {{/if}}
			<p class="mdl-typography--headline">
                {{#if location}}<a href="https://www.google.de/maps/search/{{encode location}}/" target="_blank" title="{{location}}"><i class="material-icons">place</i> {{location}}</a> ⋯ {{/if}}
                {{#if website}}<a href="{{website}}" target="_blank" title="{{name}}"><i class="material-icons">link</i> {{website}}</a> ⋯ {{/if}}
				<i class="material-icons">poll</i> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
			</p>
		</div>
	</div>
{{/tag}}

{{! The tag below includes the post loop - partials/loop.hbs }}
{{> loop}}
