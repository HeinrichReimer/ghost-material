{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{^is "paged"}}
	<div class="cover"{{#if @blog.cover}} style="background-image: url('{{@blog.cover}}')"{{/if}}>
		<div class="cover-text">
			<h1 class="mdl-typography--display-4">{{@blog.title}}</h1>

			<p class="mdl-typography--headline">{{@blog.description}}</p>
		</div>
		<button onclick="scrollDown()" class="mdl-button mdl-js-button mdl-button--icon">
			<i class="material-icons">keyboard_arrow_down</i>
		</button>
	</div>
{{/is}}

